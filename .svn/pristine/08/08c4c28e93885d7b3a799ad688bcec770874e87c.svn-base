#import <UIKit/UIKit.h>

@interface VideoLabelDetailFlowLayout : UICollectionViewFlowLayout
/** 获得每个item的高度*/
@property (nonatomic, copy) CGFloat (^heightBlock)(CGFloat sender, NSIndexPath * index);
/** 设置当前collectionview的显示多少列*/
@property (nonatomic, assign) int columnsCount;
/** 设置边距*/
@property (nonatomic, assign) UIEdgeInsets sectionInset;
/** 每列之间的间距*/
@property (nonatomic, assign) CGFloat columnsMargin;
/** 每行之间的间距*/
@property (nonatomic, assign) CGFloat rowMargin;
@end
